{
  "compilerOptions": {
    // Type Checking
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "types": ["vitest/importMeta"],
    // Modules
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "paths": { "src/*": ["./src/*"] },
    //"moduleDetection": "force",
    "verbatimModuleSyntax": true,
    // Emit
    "declaration": true,
    "noEmit": true,
    "sourceMap": true,
    // JavaScript Support
    "allowJs": true,
    "checkJs": true,
    // Interop Constraints
    //"allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    // Language and Environment
    "target": "esnext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "preserve",
    // Completeness
    "skipLibCheck": true,
    "incremental": true
  },
  "include": [
    "./*.js",
    "./*.mjs",
    "./.prettierrc.mjs",
    "./*.ts",
    "src/**/*.js",
    "src/**/*.mjs",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": ["node_modules/", "_site/", "retired/"]
}
